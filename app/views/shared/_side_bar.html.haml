.side-bar
  .side-bar__box
    .side-bar__box__user-name
      masa
    .side-bar__box__menu
      .side-bar__box__menu__new-group
        = link_to new_group_path, class:"side-bar__box__menu__new-group__icon" do
          = icon('fas', 'edit')
      .side-bar__box__menu__edit-user
        = link_to edit_user_path(current_user.id), class:"side-bar__box__menu__edit-user" do
          = icon('fas', 'cog')
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .side-bar__groups-list__techcamp
            = group.name
          .side-bar__groups-list__message
            = group.show_last_message
